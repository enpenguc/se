extends layout/default.pug
block content
  // 注册
  .se-container.page-login
    .main-wrap
      .wrap-mask
      .wrap-mask2
      .main-content
        .main-title 登陆速翼
        form.se-form
          .se-form-item
            .se-form-label 用户名：
            .se-form-control.has-icon
              input(type="text" class="se-input" placeholder="邮箱/手机号码")
              span.seicon.seicon-user
          .se-form-item.se-form-item-help
            .se-form-label 密码：
            .se-form-control.has-icon
              input(type="password" class="se-input" placeholder="登录密码")
              span.seicon.seicon-lock
              .se-form-explain <a>忘记密码</a>
          .se-form-item
            .se-form-label 验证码：
            .se-form-control(style="width: 450px;")
              input(type="text" class="se-input" style="width:138px;" placeholder="输入右侧的验证码")
              img(src="/img/captcha.png" align="absmiddle" style="width: 90px;height: 30px; vertical-align: middle; margin: 0 5px;")
              span 看不清楚，<a>换一张</a>
          .se-form-item.se-form-item-help
            .se-form-label
            .se-form-control
              input(type="submit" class="btn-primary" value="登 陆")
              .se-form-info
                 span 还没有速翼账号？<a href="">现在注册</a>
